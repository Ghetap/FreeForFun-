<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.ui.seeLocals.LocalActivity"
    android:background="@drawable/gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".ui.login.LoginActivity"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/gradient"
        >

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimaryDark"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:id="@+id/rellay"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/grad"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">
        <RelativeLayout
            android:id="@+id/imageUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp">

        </RelativeLayout>
        <ImageView
            android:id="@+id/smokingId"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/smoking" />
        <ImageView
            android:id="@+id/noSmokingId"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/nosmoking" />
        <ImageView
            android:id="@+id/petsId"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="20dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/pets" />
        <ImageView
            android:id="@+id/noPetsId"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="20dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/nopets" />
        <ImageView
            android:id="@+id/wifiId"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="20dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/wifi" />
        <ImageView
            android:id="@+id/noWifiId"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="20dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/nowifi" />
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageUser"
            android:layout_centerHorizontal="true"
            android:textColor="@color/whiteStart"
            android:textSize="30sp" />
        <RatingBar
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_marginLeft="200dp"
            android:numStars="5"
            android:stepSize="0.1"
            android:isIndicator="true" />
    </RelativeLayout>

        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="@string/description"
            android:textColor="@color/whiteStart"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/descriptionLocal"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/whiteStart"
            >
        </TextView>

        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="@string/location"
            android:paddingTop="8dp"
            android:textSize="25sp"
            android:textColor="@color/whiteStart"
            />
        <TextView
            android:id="@+id/locationLocal"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/whiteStart"
            >
        </TextView>

        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="@string/mobile_number"
            android:paddingTop="8dp"
            android:textSize="25sp"
            android:textColor="@color/whiteStart"
            />
        <TextView
            android:id="@+id/mobileLocal"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/whiteStart"
            >
        </TextView>

        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="@string/timetable"
            android:paddingTop="8dp"
            android:textSize="25sp"
            android:textColor="@color/whiteStart"
            />
        <TextView
            android:id="@+id/timetableLocal"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="@color/whiteStart"
            >
        </TextView>

        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="@string/type"
            android:paddingTop="8dp"
            android:textSize="25sp"
            android:textColor="@color/whiteStart"
            />
        <TextView
            android:id="@+id/typeLocal"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="@color/whiteStart"
            >
        </TextView>
        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="@string/free_tables_now"
            android:paddingTop="8dp"
            android:textSize="25sp"
            android:textColor="@color/whiteStart"
            />
        <TextView
            android:id="@+id/freeTables"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="@color/whiteStart"
            >
        </TextView>


    </LinearLayout>
</ScrollView>