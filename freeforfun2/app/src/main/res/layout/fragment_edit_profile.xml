<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/gradient">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rellay"
            android:paddingBottom="30dp"
            android:layout_width="match_parent"
            android:background="@drawable/grad"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/imageUser"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/username"
                    android:layout_margin="9dp"
                    android:padding="3dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:background="@drawable/circle"
                    />
            </RelativeLayout>
        </RelativeLayout>
        <EditText
            android:id="@+id/editText_firstName"
            android:layout_marginLeft="62dp"
            android:layout_below="@id/rellay"
            android:layout_width="250dp"
            android:layout_marginTop="1dp"
            android:layout_height="80dp"
            android:paddingBottom="10dp"
            android:textColorHint="@color/whiteStart"
            android:textColor="#ffffff"
            android:drawableLeft="@drawable/phone"
            android:backgroundTint="@color/whiteStart"
            android:hint="@string/firstName"
            android:drawableStart="@drawable/name"
            android:drawableTint="@color/whiteStart"
            app:errorEnabled = "true"
            android:focusable="true"
            android:clickable="true"
            android:focusableInTouchMode="true"
            />
        <EditText
            android:id="@+id/editText_lastName"
            android:layout_marginLeft="62dp"
            android:layout_below="@id/editText_firstName"
            android:layout_width="250dp"
            android:layout_marginTop="1dp"
            android:layout_height="80dp"
            android:paddingBottom="10dp"
            android:textColorHint="@color/whiteStart"
            android:textColor="#ffffff"
            android:drawableLeft="@drawable/name"
            android:backgroundTint="@color/whiteStart"
            android:hint="@string/lastName"
            android:drawableStart="@drawable/name"
            android:drawableTint="@color/whiteStart"
            app:errorEnabled = "true"
            android:focusable="true"
            android:clickable="true"
            android:focusableInTouchMode="true"
            />
        <EditText
            android:id="@+id/editText_mobileNumber"
            android:layout_marginLeft="62dp"
            android:layout_below="@id/editText_lastName"
            android:layout_width="250dp"
            android:layout_marginTop="1dp"
            android:layout_height="80dp"
            android:paddingBottom="10dp"
            android:textColorHint="@color/whiteStart"
            android:textColor="#ffffff"
            android:drawableLeft="@drawable/phone"
            android:backgroundTint="@color/whiteStart"
            android:hint="@string/mobileNumber"
            android:drawableStart="@drawable/phone"
            android:drawableTint="@color/whiteStart"
            app:errorEnabled = "true"
            android:focusable="true"
            android:clickable="true"
            android:focusableInTouchMode="true"
            />
        <Button
            android:id="@+id/button_update"
            android:layout_below="@id/editText_mobileNumber"
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/button"
            android:backgroundTint="@color/gradStart"
            android:paddingLeft="60dp"
            android:textSize="20dp"
            android:textColor="@color/whiteStart"
            android:text="@string/editProfile" />

    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>